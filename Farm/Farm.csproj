    <PackageReference Include="Xamarin.Essentials" Version="1.6.1" />
  </ItemGroup>


  <ItemGroup>
    <Compile Update="Views\AboutPageSample.xaml.cs">
      <DependentUpon>AboutPageSample.xaml</DependentUpon>
